{% extends 'base.html.twig' %}

{# {% block title %}Hello ProductController!{% endblock %} #}

{% block body %}
<a href="/logout">logout</a>
<h1>Create Product</h1>

    <form action="{{ path('create_product') }}" method="post" class="flex-col">
    <div>
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" class="border border-black" required>
        </div>

    <div>
        <label for="description">Description:</label>
        <input type="text" id="description" name="description">
        </div>
    <div>
        <label for="price">Price:</label>
        <input type="text" id="price" name="price">
       </div>
    <div>
        <input type="submit" value="Create Product">
               </div>
    </form>

 <h1>All Products</h1>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
{% for product in products %}
    <tr id="product-{{ product.id }}">
        <td>{{ product.name }}</td>
        <td>{{ product.description }}</td>
        <td>{{ product.price }}</td>
        <td>
            <button class="delete-product bg-red-500" data-id="{{ product.id }}" type="button">Delete</button>
        </td>
    </tr>
{% endfor %}
    </tbody>
</table>
{% endblock %}
